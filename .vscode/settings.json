{
  "workbench.editor.closeEmptyGroups": false,
  "path-intellisense.mappings": {
    "/": "${workspaceRoot}/src/media/",
    "media": "${workspaceRoot}/src/media",
  },
  "path-autocomplete.pathMappings": {
    "media": "${folder}/src/media",
    "custom": "${folder}/src/custom",
    "plugins": "${folder}/src/plugins",
    "src": "${folder}/src",
    "/": "${folder}",
    "$root": [
      "${folder}/p1/src",
      "${folder}/p2/src"
    ]
  },
  "vscode-opn.perLang": {
    "opnOptions": [
      {
        "forLang": "html",
        "openInApp": "chrome",
        "isUseWebServer": true,
        "isUseFsPath": false,
        "isWaitForAppExit": true,
        "trimPath": "src/"
      },
      {
        "forLang": "njk",
        "openInApp": "chrome",
        "isUseWebServer": true,
        "isUseFsPath": false,
        "isWaitForAppExit": true,
        "trimPath": "src/"
      }
    ]
  },
  "vscode-opn.webServerProtocol": "http",
  "vscode-opn.webServerHostname": "localhost",
  "vscode-opn.webServerPort": 3000
}
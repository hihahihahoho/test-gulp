{
  "workbench.editor.closeEmptyGroups": false,
  "path-intellisense.mappings": {
    "/": "${workspaceRoot}/src/media/",
    "media": "${workspaceRoot}/src/media",
  },
  "path-autocomplete.pathMappings": {
    "media": "${folder}/src/media", // alias for /test
    "/": "${folder}/src", // the absolute root folder is now /
    "$root": [
      "${folder}/p1/src",
      "${folder}/p2/src"
    ] // the root is now relative to both p1/src and p2/src
  },
  "vscode-opn.perLang": {
    "opnOptions": [
      {
        "forLang": "html",
        "openInApp": "chrome",
        "isUseWebServer": true,
        "isUseFsPath": false,
        "isWaitForAppExit": true,
        "trimPath": "src/"
      },
      {
        "forLang": "njk",
        "openInApp": "chrome",
        "isUseWebServer": true,
        "isUseFsPath": false,
        "isWaitForAppExit": true,
        "trimPath": "src/"
      }
    ]
  },
  "vscode-opn.webServerProtocol": "http",
  "vscode-opn.webServerHostname": "localhost",
  "vscode-opn.webServerPort": 3000
}
{% extends "main/_layout-sidebar.njk" %}
{% set pageLink = file_path %}
{% set pageTitle = 'Tables' %}

{% block mainInner %}
  <div class="box">
    <div class="box__body">
      <h5 class="pb30">Pagination</h5>
      <div class="row row-10 list-mv5">
        <div class="col">
          {{ ult.pagination() }}
        </div>
      </div>
    </div>
  </div>
  <div class="box">
    <div class="box__body">
      <h5 class="pb30">Table basic</h5>
      <div class="row row-10 list-mv5">
        <div class="col">
          {% set value = ['info', 'edit', 'trash', 'lock', 'unlock'] %}
          {% set tableValue =
            {
              thead: [
                ['Collumn 1', 'Collumn 2', 'Collumn 3', 'ults']
              ],
              tbody: [
                ['Collumn 1', 'Collumn 2', 'Collumn 3', ult.tableUlt(value)],
                ['Collumn 1', 'Collumn 2', 'Collumn 3', ult.tableUlt(value)],
                ['Collumn 1', 'Collumn 2', 'Collumn 3', ult.tableUlt(value)]
              ]
            }
          %}
          {{ ult.table(tableValue) }}
        </div>
      </div>
    </div>
  </div>

{% endblock %}
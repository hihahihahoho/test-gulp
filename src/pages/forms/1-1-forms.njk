{% extends "main/_layout-sidebar.njk" %}
{% import "macros/_utilities.njk" as ult %}
{% import "macros/forms/_forms.njk" as form %}
{% import "macros/forms/_buttons.njk" as button %}

{% set pageLink = file_path %}
{% set pageTitle = 'Forms' %}

{% macro localMacros(settingInputCustom) %}
  <div class="box">
    <div class="box__body pb-0">
      <h5 class="pb30">Input
        {{ settingInputCustom.inputType }}</h5>
      <form class="from-section form-vertical pb30">
        <div class="row row-20">
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input icon right', extendAttr = 'required', value = 'test', icon = 'media/icons/svg/dark/plannet.svg', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input icon left', extendAttr = 'required', iconLeft = 'media/icons/svg/dark/plannet.svg', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input icon left', extendAttr = 'required', iconLeft = 'media/icons/svg/dark/plannet.svg', note = 'This is an input note', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input icon left text', extendAttr = 'required', icTxt = 'Not required', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
            {{ button.btn('Button', size = 'xs-2', color = 'line-primary') }}
            {% endset %}
            {{ form.input('Input icon left button', extendAttr = 'required', extendContent = extendContentCon, settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
            <div class="input-ic">
              {{ ult.eye() }}
            </div>
            {% endset %}
            {{ form.input('Input password', iconLeft = 'media/icons/svg/dark/plannet.svg', extendAttr = 'required', extendContent = extendContentCon, extendContentClass = 'pr0', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
            <a class="link">Demo link</a>
            {% endset %}
            {{ form.input('Input content outside', extendContent = extendContentCon, extendAttr = 'required', extendContentPos = 'outside', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set dataSelect = ['Option 11', 'Option 2', 'Option 3'] %}
            {{ form.select('Select', value = dataSelect, extendAttr = 'required',settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set dataSelect = [
              {
                val: 'Vietcombank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng thương mại cổ phần ngoại thương Việt Nam'
              }, {
                val: 'Vietinbank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng Thương mại cổ phần Công Thương Việt Nam'
              }, {
                val: 'Agribank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                img: 'media/icons/svg/dark/plannet.svg',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }
            ] %}
            {{ form.select('Select Custom Image', valueTemplate = dataSelect, dataimgClass = 'circle-md', extendAttr = 'required', note = 'This is an input note', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set dataSelect = [
              {
                val: 'Vietcombank',
                sub: 'Ngân hàng thương mại cổ phần ngoại thương Việt Nam'
              }, {
                val: 'Vietinbank',
                sub: 'Ngân hàng Thương mại cổ phần Công Thương Việt Nam'
              }, {
                val: 'Agribank',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }, {
                val: 'Agribank',
                sub: 'Ngân hàng nông nghiệp và phát triển nông thôn Việt Nam'
              }
            ] %}
            {{ form.select('Select Custom Text', valueTemplate = dataSelect, extendAttr = 'required', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.datepicker('Datepicker single', note = 'This is an input note', extendAttr = 'required', settingInputCustom = settingInputCustom) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.datepicker('Datepicker range', extendAttr = 'required', range = 'true', settingInputCustom = settingInputCustom) }}
          </div>
        </div>
        <div class="row row-20">
          <div class="col-lg-6 col-sm-12">
            {{ form.input('Input icon right', icTxt = '10/240', settingInputCustom = settingInputCustom, textarea = 'true', extendAttr = 'required', textareaAutoSize = 'false') }}
          </div>
          <div class="col-lg-6 col-sm-12">
            {{ form.input('Input icon right', icTxt = '10/240', settingInputCustom = settingInputCustom, extendAttr = 'required', textarea = 'true') }}
          </div>
        </div>
        <div class="row row-20 justify-content-center">
          <div class="col-sm-4">
            {{ button.btn('Validate') }}
          </div>
        </div>
      </form>
    </div>
  </div>
{% endmacro %}

{% block mainInner %}
  {% set settingInputCustomBorder = {
    inputType: 'border',
    inputSize: 'sm',
    icSize: 'sm'
  } %}
  {{ localMacros(settingInputCustomBorder) }}
  {% set settingInputCustomClean = {
    inputType: 'clean',
    inputSize: 'sm',
    icSize: 'sm'
  } %}
  {{ localMacros(settingInputCustomClean) }}
  {% set settingInputLine = {
    inputType: 'line',
    inputSize: 'sm',
    icSize: 'xs-1'
  } %}
  {{ localMacros(settingInputLine) }}
  {% set settingMaterial = {
    inputType: 'material',
    inputSize: 'sm',
    icSize: 'xs-1'
  } %}
  {{ localMacros(settingMaterial) }}
  {% set settingMaterial2 = {
    inputType: 'material-2',
    inputSize: 'md',
    icSize: 'sm'
  } %}
  {{ localMacros(settingMaterial2) }}
  {% set settingMaterial3 = {
    inputType: 'material-3',
    inputSize: 'sm',
    icSize: 'sm'
  } %}
  {{ localMacros(settingMaterial3) }}
{% endblock %}
{% extends "main/_layout-sidebar.njk" %}
{% set pageLink = file_path %}
{% set pageTitle = 'Buttons' %}

{% block mainInner %}
  <div class="box">
    <div class="box__body">
      <div class="btn-groups">
        <div class="row row-10">
          <div class="flex-grow-1 flex-sm-grow-0 col-auto">
            {{ button.buttonNew({ iconLeft: 'media/icons-color/invert/default/plannet.svg', shape: 'circle', tooltip: 'test' }) }} 
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="box">
    <div class="box__body">
      <div class="btn-groups">
        <div class="row row-10 list-mv5">
          <div class="flex-grow-1 flex-sm-grow-0 col-auto">
            {{ button.buttonNew({ title: 'button' }) }} 
          </div>
          <div class="flex-grow-1 flex-sm-grow-0 col-auto">
            {{ button.buttonNew({ title: 'button', iconLeft: 'media/icons-color/invert/default/plannet.svg' }) }} 
          </div>
          <div class="flex-grow-1 flex-sm-grow-0 col-auto">
            {{ button.buttonNew({ title: 'button', iconRight: 'media/icons-color/primary/default/plannet.svg', color: 'line-primary' }) }} 
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="box">
    <div class="box__body">
      <div class="btn-groups">
        <div class="row row-10 list-mv5">
          <div class="col-auto col-md flex-grow-1">
            {{ button.btn('Buttons', icon = 'media/icons-color/invert/default/plannet.svg', href="/dist/pages/forms/1-7-buttons.html", rounded = 'true') }}
          </div>
          <div class="col-auto col-md flex-grow-1">
            {{ button.btn('Buttons', iconLeft = 'media/icons-color/primary/default/plannet.svg', color = 'transparent', href="/dist/pages/forms/1-7-buttons.html") }}
          </div>
          <div class="col-auto col-md flex-grow-1">
            {{ button.btn('Buttons', iconLeft = 'media/icons-color/primary/default/plannet.svg', color = 'light-blue', modal="#modalTest") }}
          </div>
          <div class="col-md col-12">
            {{ button.btn('Buttons', icon = 'media/icons-color/primary/default/plannet.svg', color = 'line-primary', disabled = 'true', spaceBetween = 'true') }}
          </div>
          <div class="col-md col-12">
            {{ button.buttonNew({ iconLeft: 'media/icons-color/invert/default/plannet.svg', shape: 'circle' }) }} 
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
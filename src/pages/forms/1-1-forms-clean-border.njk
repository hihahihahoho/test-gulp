{% extends "main/_layout-sidebar.njk" %}
{% import "macros/_utilities.njk" as ult %}
{% import "macros/forms/_forms.njk" as form %}
{% import "macros/forms/_buttons.njk" as button %}

{% set pageLink = file_path %}
{% set pageTitle = 'Clean | Border | Line' %}

{% block mainInner %}
  <div class="box">
    <div class="box__body pb-0">
      <h5 class="pb30">Input border</h5>
      <div class="from-section form-vertical">
        <div class="row row-20">
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input border', icon = 'media/icons/svg/dark/plannet.svg') }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input border', iconLeft = 'media/icons/svg/dark/plannet.svg') }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.input('Input border', icTxt = 'Not required' ) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
              {{ button.btn('Button', size = 'xs-2', color = 'line-primary') }}
            {% endset %}
            {{ form.input('Input border', extendContent = extendContentCon ) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
              {{ ult.eye() }}
            {% endset %}
            {{ form.input('Input border', extendContent = extendContentCon, extendContentClass = 'pr0' ) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set extendContentCon %}
              <a class="link">Demo link</a>
            {% endset %}
            {{ form.input('Input border', extendContent = extendContentCon, extendContentPos = 'outside' ) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {% set dataSelect = ['Option 11', 'Option 2', 'Option 3'] %}
            {{ form.select('Select border', value = dataSelect, selected = 2) }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.datepicker('Input border') }}
          </div>
          <div class="col-lg-3 col-md-4 col-sm-6">
            {{ form.datepicker('Input border', range = 'true') }}
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
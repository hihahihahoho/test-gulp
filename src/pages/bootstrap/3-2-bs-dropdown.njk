{% extends "main/_layout-sidebar.njk" %}
{% set pageLink = file_path %}
{% set pageTitle = 'Dropdown' %}

{% block mainInner %}
  <div class="box">
    <div class="box__body">
      <h5 class="pb30">Dropdown basic</h5>
      <div class="row row-20">
        <div class="col-md-6">
          <div class="bd-example bd-example-modal">
            {% set dropdownItemCustom %}
              <div class="h6">Lần đăng nhập gần nhất
                <br>06/08/2020 19:14:15
              </div>
            {% endset %}
            {% set dropdownValue = [
              {
                main: 'Dropdown 1',
                icon: 'media/icons-color/default/line-icon/plannet.svg',
                href: '#'
              }, {
                main: 'Dropdown 2',
                sub: 'This is a sub text',
                icon: 'media/icons-color/default/line-icon/plannet.svg',
                modal: '#modalTest'
              }, {
                main: 'Dropdown 3',
                sub: 'This is a sub text',
                icon: 'media/icons-color/default/line-icon/plannet.svg',
                toast: '#modalTest'
              }, {
                break: 'true'
              }, {
                custom: dropdownItemCustom
              }
            ] %}
            {{ dropdown.dropdown(dropdownValue) }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="box">
    <div class="box__body">
      <h5 class="pb30">Dropdown basic</h5>
      <div class="row row-20">
        <div class="col-auto">
          {% set dropdownToggle %}
          {{ button.btn('Button Dropdown', color = 'line-orange', extendAttr = 'data-toggle="dropdown"') }}
          {% endset %}
          {{ dropdown.dropdown(dropdownValue, toggle = dropdownToggle) }}
        </div>
      </div>
    </div>
  </div>

{% endblock %}
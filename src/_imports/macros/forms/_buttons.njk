{% extends "_varibles.njk" %}

{% macro btn(title, id, type = settingButtonDefault.type, color = settingButtonDefault.color, size = settingButtonDefault.size, width, modal, href, extendAttr, extendClass, shape, custom, icon, icLeft, icSize = settingButtonDefault.icSize, disabled = 'false', spaceBetween, tooltip, fontSize, textColor, space = settingButtonDefault.space, rounded = settingButtonDefault.rounded) %}
  <!-- button.btn -->
  {% if modal %}
    {% set modalAttr %}
    data-toggle="modal" data-target="{{ modal }}"
    {% endset %}
  {% endif %}
  {% if shape == 'circle' %}
    {% set btnShape = 'ubtn-circle-' + size %}
  {% elseif shape == 'square' %}
    {% set btnShape = 'ubtn-circle-' + size + ' ubtn-square'%}
  {% else%}
    {% set btnShape = 'ubtn-' + size %}
  {% endif %}
  {% if width %}
    {% set btnWidth = 'ubtn-min-width-' + width %}
  {% endif %}

  {% if icLeft %}
    {% set icLeftContent %}
    <span class="ubtn-ic col-auto">
      <img src="{{icLeft}}" alt="" class="ic-{{ icSize }}">
    </span>
    {% endset %}
  {% endif %}

  {% if icon %}
    {% set iconContent %}
    <span class="ubtn-ic col-auto">
      <img src="{{icon}}" alt="" class="ic-{{ icSize }}">
    </span>
    {% endset %}
  {% endif %}

  {% if fontSize %}
    {% set fontSizeText = fontSize %}
  {% endif %}
  
  {% if textColor %}
    {% set textColorText = 'color' + textColor %}
  {% endif %}

  {% if title %}
    {% set titleText %}
    <span class="ubtn-text {{ fontSizeText }} {{ textColorText }}">{{ title }}</span>
    {% endset %}
  {% endif %}

  {% if spaceBetween %}
    {% set spaceBetweenText = 'justify-content-between' %}
  {% endif %}

  {% if tooltip %}
    {% set tooltipContent %}
    data-tooltip="tooltip" title = "{{ tooltip | safe}}"
    {% endset %}
  {% endif %}

  {% if id %}
    {% set idTxt = 'id="'+ id + '"' %}
  {% endif %}

  {% if rounded == 'true' %}
    {% set roundedText = 'ubtn-rounded' %}
  {% endif %}

  {% if custom %}
    {% set btnContent %}
    {{ custom | safe }}
    {% endset %}
  {% else %}
    {% set btnContent %}
    <div class="row row-{{ space }} ubtn-inner {{ spaceBetweenText }}">
      {{ icLeftContent | safe }}
      {{ titleText | safe }}
      {{ iconContent | safe }}
    </div>
    {% endset %}
  {% endif %}

  {% if disabled == 'true' %}
    {% set disabledText = 'disabled' %}
  {% endif %}

  {% if href %}
    {% set type = 'a' %}
    {% set hrefAttr %}
    href ="{{ href }}"
    {% endset %}
  {% endif %}
  <{{ type }} {{idTxt}} class="ubtn ubg-{{ color }} {{ btnShape }} {{ btnWidth }} {{ roundedText }} {{ extendClass }}" {{ modalAttr | safe}} {{ hrefAttr | safe}} {{ extendAttr }} {{disabledText}} {{ tooltipContent | safe }}>
    <div class="ubtn-full">
      {{ btnContent | safe }}
    </div>
  </{{ type }}>
  <!-- end button.btn -->
{% endmacro %}
{% set settingDefault = {
  inputType: 'material',
  inputSize: 'sm',
  icSize: 'xs',
  inputClear: 'true'
} %}
{% set dataSelectDefualt = ['Option 1', 'Option 2', 'Option 3'] %}
{% macro input(title, inputType = settingDefault.inputType, value = '', size = settingDefault.inputSize, icon = '', icSize = settingDefault.icSize, iconLeft, type = 'text', id = '', iconText = '', extendAttr, extendClass, note = '', textarea, autocomplete = '', placeholder = '', inputClear = settingDefault.inputClear, disabled = 'false', icTxt, extendContent, extendContentPos = 'inside', extendContentClass) %}
  <!-- forms.input -->
  {% if not note == '' %}
    {% set noteContent %}
    <div class="note-text h7">
      {{ note }}
    </div>
    {% endset %}
  {% endif %}

  {% if type == 'password' %}
    {% set eye %}
    <div class="eye-wrap">
      <input type="checkbox" name="" class="hidden" checked="" id="eye-{{id}}">
      <label class="eye text-right ic-pos-right" for="eye-{{id}}">
        <div class="eye-slash"></div>
      </label>
    </div>
    {% endset %}
  {% endif %}

  {% set ic %}
  <div class="input-ic">
    <img src="{{ icon }}" class="ic-lg" alt="">
  </div>
  {% endset %}

  {% set icLeft %}
  <div class="input-ic">
    <img src="{{ iconLeft }}" class="ic-lg" alt="">
  </div>
  {% endset %}

  {% if not subBlock == '' %}
    {% set subBlockContent = subBlock %}
  {% endif %}

  {% set inputClearIc %}
  <div class="input-ic input-clear pointer">
    <img src="media/icons/svg/dark/close.svg" alt="" class="ic-xs">
  </div>
  {% endset %}

  {% if textarea == 'true' %}
    {% set inputClearIc = '' %}
  {% endif %}

  {% if type == 'password' %}
    {% set inputClearIc = '' %}
  {% endif %}

  {% if inputClear == 'false' %}
    {% set inputClearIc = '' %}
  {% endif %}

  {% if id %}
    {% set idText = 'id="' + id + '"' %}
  {% endif %}

  {% set disabledAttr = '' %}
  {% if disabled == 'true' %}
    {% set disabledAttr = 'disabled = disabled' %}
  {% endif %}

  {% if icTxt %}
    {% set icTxtContent %}
    <div class="input-ic-txt color-base-2">
      {{ icTxt | safe }}
    </div>
    {% endset %}
  {% endif %}

  {% if extendContentPos == 'outside' %}
    {% set extendContentPosTxt = 'input-extend-outside' %}
  {% endif %}

  {% set inputArtt %}
  {{ idText }}
  type="{{ type }}" class="input input-{{ size }}
  input-{{ inputType }}
  input-ic-{{ icSize }}
  {% if inputClear == 'true' %}
    input-has-clear
    {% if icon %}
      input-ic-right
    {% endif %}
    {% if iconLeft %}
      input-ic-left
    {% endif %}
  {% endif %}
  {{ extendClass }}" autocorrect="off" placeholder="{{ placeholder }}"
  {{ disabledAttr }}
  {{ extendAttr }}
  {% endset %}
  <div class="form-group">
    <div class="input-group-wrap input-group-{{ inputType }} {{extendContentPosTxt}}">
      <label class="input-group">
        {% if textarea == 'true' %}
          <textarea spellcheck="false" {{ inputArtt | safe | trim }} rows="1">{{ value }}</textarea>
        {% else %}
          <input {{ inputArtt | safe | trim}} value="{{ value }}">
        {% endif %}
        <div class="input-frame"></div>
        <div class="input-label">{{ title }}</div>
        {% if autocomplete == 'true' %}
          <ul class="live-search-result live-search-result-2">
            <li>
              <span>2,000</span>
            </li>
            <li>
              <span>20,000</span>
            </li>
            <li>
              <span>200,000</span>
            </li>
            <li>
              <span>2,000,000</span>
            </li>
            <li>
              <span>20,000,000</span>
            </li>
          </ul>
        {% endif %}
        {% if iconLeft %}
          <div class="input-flex-content input-flex-content-left">
            {{ icLeft | safe }}
          </div>
        {% endif %}
        {% if icon or eye or inputClear %}
          <div class="input-flex-content">
            {{ inputClearIc | safe }}
            {% if icon %}
              {{ ic | safe }}
            {% endif %}
            {{ eye | safe }}
            {{ icTxtContent | safe }}
          </div>
        {% endif %}
      </label>
      {% if extendContent %}
        <div class="input-{{ size }} input-group-extend {{ extendContentClass }} input-ic-{{icSize}}">
          {{ extendContent | safe }}
        </div>
      {% endif %}
    </div>
    {{ noteContent | safe }}
    <div class="errorBlock"></div>
  </div>
  <!-- end forms.input -->
{% endmacro %}

{% macro select(title, inputType = settingDefault.inputType, size = settingDefault.inputSize, type = 'text', noSearch = "", value = dataSelectDefualt, selected = '', id = '', extendAttr, extendClass, note = '', customOption = '', icon = '', iconPos = "left", icSize = settingDefault.icSize) %}
  <!-- forms.select -->
  {% if not note == '' %}
    {% set noteContent %}
    <div class="note-text h7 color-base-3">
      {{ note }}
    </div>
    {% endset %}
  {% endif %}
  {% if icon %}
    {% set ic %}
    <div class="input-ic">
      <img src="{{ icon }}" class="ic-lg" alt="">
    </div>
    {% endset %}
    {% set icClass = 'input-ic-' + iconPos %}
  {% endif %}
  <div class="form-group">
    <div class="input-group-wrap input-group-{{ inputType }} {{extendContentPosTxt}}">
      <div class="input-group">
        <select id="{{ id }}" name="" class="select-2 {{ extendClass }} input input-{{ size }} input-ic-{{ icSize }} input-{{ inputType }} {{icClass}}" header-text="{{ title }}" data-minimum-results-for-search="{{ noSearch }}" data-placeholder="" {{ extendAttr }}>
          <option value=""></option>
          {% if not customOption == '' %}
            {{ customOption | safe }}
          {% else %}
            {% for item in value %}
              {% set selectedText = '' %}
              {% if loop.index == selected %}
                {% set selectedText = 'selected' %}
              {% endif %}
              <option value="{{ loop.index }}" {{ selectedText }}>{{ item }}</option>
            {% endfor %}
          {% endif %}
        </select>
        <div class="input-frame"></div>
        <div class="input-label">{{ title }}</div>
        {{ ic | safe }}
        <div class="input-ic">
          <div class="arrow-down-anim"></div>
        </div>
      </div>
      {{ noteContent | safe}}
    </div>
    <div class="errorBlock"></div>
  </div>
  <!-- end forms.select -->
{% endmacro %}

{% macro datepicker(title, inputType = settingDefault.inputType, value = '', size = settingDefault.inputSize, type = 'text', id = '', extendAttr, range = 'false', placeholder = '', icSize = settingDefault.icSize) %}
  <!-- forms.datepicker -->
  {% if range == 'true' %}
    {% set lpTxt = 'light-pick-range' %}
  {% else %}
    {% set lpTxt = 'light-pick' %}
  {% endif %}
  <div class="form-group">
    <div class="input-group-wrap input-group-{{ inputType }}">
      <label class="input-group">
        <input id="{{ id }}" type="{{ text }}" class="{{lpTxt}} input input-{{ inputType }} input-{{ size }} input-ic-{{ icSize }}" value="" placeholder="{{ placeholder }}" {{ extendAttr | safe}}>
        <div class="input-frame"></div>
        <div class="input-label">{{ title }}</div>
        <div class="input-ic">
          <img src="/dist/media/icons/svg/dark/calendar.svg" class="ic-lg" alt="">
        </div>
      </label>
    </div>
    <div class="errorBlock"></div>
  </div>
  <!-- end forms.datepicker -->
{% endmacro %}
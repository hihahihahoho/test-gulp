    {% if 'unlock' in value %}
      <div class="col-auto">
        {{ button.btn(icon = '/dist/media/icons/svg2/unlock.svg', size = 'xs-2', shape = 'square', icSize = 'sm', color = 'grey-4', modal = '#modalUnlock', type = 'a', tooltip = 'Unlock') }}
